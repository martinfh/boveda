
<body class= "bg">
	<div class = "fadein contenedorforms">
		<div class = recuadronuevaobra>
			<div style="text-align: center;">
<h1>Editar Obra</h1>
	<%= form_for (@obra) do |f| %>
	<p>
		<%= f.label :titulo %><br>
		<%= f.text_field :titulo %>
	</p>
	<p>
		<%= f.label :tecnica %> <br>
		<%= f.text_field :tecnica%>
	</p>
	<p>
		<%= f.label :medidas %> <br>
		<%= f.text_field :medidas %>
	</p>
	<p>
		<%= f.label :año %><br>
		<%= f.date_select :año %>
	</p>
	<p>
		<%= f.label :precio, 'Precio' %><br>
		<%= f.number_field :precio %>
	</p>
	<p>
		<%=f.label :imagenes %><br>
		<%=f.file_field :imagen %>
	</p>
	<p>
		<%= f.label :disponibilidad %><br>
		<%= f.text_field :disponibilidad %>
	</p>
	<p>
		<%= f.submit 'Editar Obra' %> 
	</p>
		<% end %>
	</div>

</div>
</div>
</body>