
<header>
	<div style= "text-align: right"><button type="button" class="btn btn-outline-success"><%=link_to 'INICIO', welcome_index_path %>
		</button> </div>
   <h1><strong>Inventario</strong></h1>
	<div style= "text-align: left">
<button type="button" class="btn btn-outline-primary">
	<%=link_to 'NUEVA OBRA', new_obra_path %>
		</button>
		</div>
</header>
&nbsp;&nbsp;
<table class= "table table-hover">
	<thead class= "thead-dark thead-light">
	<tr>
		<th width="200px">Título</th>
		<th width="150px">Técnica</th>
		<th width="100px">Medidas</th>
		<th width="120px">Año</th>
		<th width="60px">Precio</th>
		<th width="150px">Disponibilidad</th>
		<th width="200px">Imagen</th>
		<th width="50px">
		<th width="50px">
		<th width="50px">
	</tr>
	</thead>
	<% @obras.each do |obra|%>
	<tr>
		<td>
			<%= obra.titulo%>
		</td>
		<td>
			<%= obra.tecnica%>
		</td>
		<td>
			<%= obra.medidas%>
		</td>
		<td>
			<%= obra.año%>
		</td>  
		<td>
			<%= obra.precio%>
		</td>
		<td>
			<%= obra.disponibilidad%>
		</td>
		<td>
			<%= obra.imagenes%>
		</td>
		<td>
			<%= link_to 'Ver', obra_path(obra)%>
		</td>
		<td>
			<%= link_to 'Editar' , edit_obra_path(obra)%>
		</td>
		<td>
			<%= link_to 'Eliminar' , obra_path(obra),
			method: :delete %>
		</td>
	</tr>
<% end %> 
</table>
<footer>
	<p style= "text-align: right;">
		<button type="button" class="btn btn-outline-warning text-danger">
		<%= link_to 'Exportar inventario a PDF', obras_path(@obras, format: 'pdf')%>
		</button>
	</p>
</footer>
